<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3EDF42"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGR SockDash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#1A297C"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="22dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.077"
            android:id="@+id/textView" app:layout_constraintHorizontal_bias="0.498"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints" android:id="@+id/linearLayout" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/spinner"/>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
        <ImageView
                android:layout_width="65dp"
                android:layout_height="68dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Hello The Seth!"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <CalendarView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="271dp" android:id="@+id/calendarView"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:hint="Ketikan apapun disini!"
                android:gravity="top"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/EditText1"
                android:saveEnabled="true"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_add"
                android:saveEnabled="true"
                android:id="@+id/imageButton"/>
        <ImageView
                android:layout_width="500dp"
                android:layout_height="500dp"
                app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/imageView2"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>